<main class='main'>
  {{#with data}}
    <form method='POST' action='/purshase-submit?id={{id}}' class='form-card'>

      {{>heading title='Ваше замовлення'}}
      <ul class='cart'>
        {{#each cart}}
          <li class='cart__item'>
            <span class='cart__item__text'>{{text}}</span>
            <span class='cart__item__price'>{{price}}₴</span>
          </li>
        {{/each}}
      </ul>
      {{>divider}}

      {{>heading title='Оформлення замовлення'}}
      <div class='cart__fields'>
        {{>field label="Ім'я" name ='firstname'}}
        {{>field label="Призвіще" name ='lastname'}}
        {{>field label="Телефон" name ='phone'}}
        {{>field label="Пошта" name ='email'}}
      </div>

      <div>
        <p class='cart__comment__label'>Коментар</p>
        <textarea
          class='cart__comment'
          name='comment'
          id='comment'
          cols='30'
          rows='5'
        ></textarea>
      </div>
      <div class='cart__fields'>
        {{>field label="Списати бонуси" name ='bonus'}}
        {{>field label="Промо код" name ='promocode'}}

      </div>
      {{>field type='number' value=amount name='amount' disabled=true}}
      {{>field type='number' value=totalPrice name='totalPrice' disabled=true}}
      {{>field type='number' value=productPrice name='productPrice' disabled=true}}
      {{>field type='number' value=deliveryPrice name='deliveryPrice' disabled=true}}
      {{>divider}}
      <strong class='form-card__total'>
        Всього:
        {{totalPrice}}₴
        <span class='form-card__bonus'>({{bonus}}₴ на бонусний рахунок)</span>
      </strong>

      {{>button text='Оформити замовлення'}}

    </form>
  {{/with}}

</main>