<main class='main'>
  <h1 class='title'>Створення товару</h1>
  <section class='product'>
    <div class='form'>
      <h1 class='form__title'>Інформація про товар</h1>
      <form method='POST' action='/product-create'>
        <div class='form__content'>
          <div class='form__field'>
            <label for='name' class='form__label'>
              Назва товару
            </label>
            <input type='name' name='name' id='' class='form__input' />
          </div>
          <div class='form__field'>
            <label for='price' class='form__label'>
              Ціна
            </label>
            <input type='price' name='price' id='' class='form__input' />
          </div>
        </div>
        <div class='form__footer'>
          <div class='form__field'>
            <label for='description' class='form__label'>
              Короткий опис товару
            </label>
            <textarea
              class='form__input'
              name='description'
              id='description'
              cols='30'
              rows='3'
            ></textarea>
            <span class='form__info'>Відображається у картці товару</span>
          </div>
          <button class='form__button'>Створити товар</button>
        </div>
      </form>
    </div>
  </section>
</main>