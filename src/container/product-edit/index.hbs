<main class='main'>
  <h1 class='title'>Редагування товару</h1>
  <section class='product'>
    <div class='form'>
      <h1 class='form__title'>Інформація про товар</h1>
      <form method='POST' action='/product-edit'>
        <div class='form__content'>
          <div class='form__field'>
            <label for='name' class='form__label'>
              Назва товару
            </label>
            <input
              value='{{product.name}}'
              type='name'
              name='name'
              id=''
              class='form__input'
            />
          </div>
          <div class='form__field'>
            <label for='price' class='form__label'>
              Ціна
            </label>
            <input
              value='{{product.price}}'
              type='price'
              name='price'
              id=''
              class='form__input'
            />
          </div>
          <div class='form__field'>
            <label for='id' class='form__label'>
              ID
            </label>
            <input
              readonly
              value='{{product.id}}'
              type='id'
              name='id'
              id=''
              class='form__input'
            />
          </div>
        </div>
        <div class='form__fotter'>
          <div class='form__field'>
            <label for='description' class='form__label'>
              Короткий опис товару
            </label>
            <textarea
              class='form__input'
              name='description'
              id='description'
              cols='30'
              rows='3'
            >{{product.description}}</textarea>
            <span class='form__info'>Відображується у картці товару</span>
          </div>
          <div class='form__buttons'>
            <button type='submit' class='form__button'>Зберегти оновлення</button>
            <a
              href='/product-delete?id={{id}}'
              class='form__button warning'
            >Видалити товар</a>
          </div>
        </div>
      </form>
    </div>
  </section>
</main>