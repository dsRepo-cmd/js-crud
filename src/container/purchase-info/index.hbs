<main class='main'>
  {{#with data.list}}

    <form method='POST' action='/purshase-edit?id={{id}}' class="form-card">
      {{>heading title='Ваше замовлення'}}
       <div class="cart">
          {{>form-text label='ID:' text=id }}
          {{>form-text label="Ім'я:" text=firstname }}
       </div>
       {{>divider}}
       <div class="cart">
          {{>form-text label="Прізвище:" text=lastname }}
          {{>form-text label="Електронна пошта:" text=email }}
       </div>
       {{>divider}}
       <div class="cart">
          {{>form-text label="Телефон:" text=phone }}
          {{>form-text label="Назва товару:" text=product.title }}
       </div>
       {{>divider}}
       <div class="cart">
          {{>form-text label="Вартість товарів:" text=product.price }}
          {{>form-text label="Вартість доставки:" text=deliveryPrice }}
       </div>
       {{>divider}}
       <div class="cart">
          {{>form-text label="Сума до сплати:" text=totalPrice }}
          {{>form-text label="Нараховані бонуси:" text=bonus }}
       </div> 
         {{>button text='Змінити данні'}}
  {{/with}}

</main>